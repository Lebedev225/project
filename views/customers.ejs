<%- include("_header") -%>

<h1>List of customers (<%= model.length %>)</h1>

<div class="table-responsive-sm">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>State</th>
                <th>Sales YTD</th>
                <th>Prev Years Sales</th>

                <th class="d-print-none">
                    <a class="btn btn-sm btn-success" href="/create"
                        >Create Customer</a
                    >
                </th>
            </tr>
        </thead>
        <tbody>
            <% for (const customer of model) { %>
            <tr>
                <td><%= customer.customer_id %></td>
                <td><%= customer.fname %></td>
                <td><%= customer.lname %></td>
                <td><%= customer.state %></td>
                <td><%= customer.totalsales %></td>
                <td><%= customer.lastsales %></td>
                <td class="d-print-none">
                    <a
                        class="btn btn-sm btn-warning"
                        href="/edit/<%= customer.customer_id %>"
                        >Edit</a
                    >
                    <a
                        class="btn btn-sm btn-danger"
                        href="/delete/<%= customer.customer_id %>"
                        >Delete</a
                    >
                </td>
            </tr>
            <% } %>
        </tbody>
    </table>
</div>

<%- include("_footer") -%>
