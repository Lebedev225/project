<div class="form-group row">
    <label class="col-form-label col-sm-2" for="id">ID</label>
    <div class="col-sm-3">
        <input
            autofocus
            class="form-control"
            name="id"
            value="<%= model.id %>"
            required
        />
        <div>(Required)</div>
    </div>
</div>

<div class="form-group row">
    <label class="col-form-label col-sm-2" for="fname">First Name</label>
    <div class="col-sm-3">
        <input
            class="form-control"
            name="fname"
            value="<%= model.fname %>"
            required
        />
        <div>(Required)</div>
    </div>
</div>

<div class="form-group row">
    <label class="col-form-label col-sm-2" for="lname">Last Name</label>
    <div class="col-sm-3">
        <input
            class="form-control"
            name="lname"
            value="<%= model.lname %>"
            required
        />
        <div>(Required)</div>
    </div>
</div>
<!-- TO DO: make it a dropdown list -->
<div class="form-group row">
    <label class="col-form-label col-sm-2" for="state">State</label>
    <div class="col-sm-3">
        <input
            class="form-control"
            name="state"
            value="<%= model.state %>"
            pattern="[a-zA-Z]*"
        />
    </div>
</div>

<div class="form-group row">
    <label class="col-form-label col-sm-2" for="totalsales">Sales YTD</label>
    <div class="col-sm-3">
        <input
            type="number"
            class="form-control"
            name="totalsales"
            value="<%= model.totalsales %>"
        />
    </div>
</div>

<div class="form-group row">
    <label class="col-form-label col-sm-2" for="lastsales"
        >Previous Year Sales</label
    >
    <div class="col-sm-3">
        <input
            type="number"
            class="form-control"
            name="lastsales"
            value="<%= model.lastsales %>"
        />
    </div>
</div>
